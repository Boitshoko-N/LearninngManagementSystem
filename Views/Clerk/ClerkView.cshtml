@{
    ViewBag.Title = "Clerk Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #f5f7fb;
    }

    .sidebar {
        height: 100vh;
        background: #1e293b;
        color: white;
        padding-top: 20px;
    }

        .sidebar a {
            color: #cbd5e1;
            text-decoration: none;
            padding: 12px 20px;
            display: block;
            border-radius: 8px;
            margin: 5px 10px;
        }

            .sidebar a:hover,
            .sidebar a.active {
                background-color: #2563eb;
                color: white;
            }

    .content {
        padding: 30px;
    }

    .stat-card {
        border-radius: 16px;
    }
</style>

<div class="container-fluid">
    <div class="row">

        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 sidebar">
            <h5 class="text-center fw-bold mb-4">📘 Clerk Panel</h5>

            <a class="active" href="@Url.Action("ClerkView", "Clerk")">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>

            <a href="@Url.Action("RecordMarks", "Clerk")">
                <i class="bi bi-check2-square me-2"></i>Record Marks
            </a>

            <a href="@Url.Action("RegisterStudent", "Clerk")">
                <i class="bi bi-person-plus me-2"></i>Register Student
            </a>

            <a href="@Url.Action("UpdateStudent", "Clerk")">
                <i class="bi bi-pencil-square me-2"></i>Update Student
            </a>

            <a href="@Url.Action("SearchStudent", "Clerk")">
                <i class="bi bi-search me-2"></i>Search Students
            </a>

            <a href="@Url.Action("GenerateClassList", "Clerk")">
                <i class="bi bi-card-list me-2"></i>Class Lists
            </a>

            <a href="@Url.Action("SendAnnouncement", "Clerk")">
                <i class="bi bi-megaphone me-2"></i>Announcements
            </a>

            <a href="@Url.Action("AddSubject", "Manage")">
                <i class="bi bi-megaphone me-2"></i>Add Subject
            </a>

            <hr class="text-secondary">

            <a href="@Url.Action("Logout", "Account")">
                <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 content">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 class="fw-bold">Welcome, Clerk 👋</h3>
                    <p class="text-muted">Manage students and school communication</p>
                </div>
                <span class="badge bg-success p-2">Active</span>
            </div>

            <!-- Stats -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card stat-card shadow-sm border-0">
                        <div class="card-body">
                            <h6 class="text-muted">Total Students</h6>
                            <h3 class="fw-bold">@ViewBag.StudentCount</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card shadow-sm border-0">
                        <div class="card-body">
                            <h6 class="text-muted">Classes</h6>
                            <h3 class="fw-bold">--</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card stat-card shadow-sm border-0">
                        <div class="card-body">
                            <h6 class="text-muted">Announcements Sent</h6>
                            <h3 class="fw-bold">--</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">Student Management</h5>
                            <p class="text-muted small">Register, update, or search student records</p>
                            <a href="@Url.Action("RegisterStudent", "Clerk")" class="btn btn-primary w-100">
                                Register Student
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">Class Lists</h5>
                            <p class="text-muted small">Generate printable class lists</p>
                            <a href="@Url.Action("GenerateClassList", "Clerk")" class="btn btn-success w-100">
                                Generate List
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">Announcements</h5>
                            <p class="text-muted small">Notify parents and teachers</p>
                            <a href="@Url.Action("SendAnnouncement", "Clerk")" class="btn btn-warning w-100">
                                Send Announcement
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">Student Management</h5>
                            <p class="text-muted small">Record Intake Results</p>
                            <a href="@Url.Action("RecordMarks", "Clerk")" class="btn btn-primary w-100">
                                Record Marks
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold mb-2">Student Management</h5>
                            <p class="text-muted small">Add a new subject</p>
                            <a href="@Url.Action("AddSubject", "Manage")" class="btn btn-primary w-100">
                                Add Subject
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
