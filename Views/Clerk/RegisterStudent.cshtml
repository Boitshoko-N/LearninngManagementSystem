@model List<EligibleStudentVM>

@{
    ViewBag.Title = "Register Students";
}

<h4 class="fw-bold mb-3">Students Eligible for Registration</h4>
<p class="text-muted">
    Contact the parent for approval before registering.
</p>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Student</th>
            <th>Grade</th>
            <th>Parent</th>
            <th>Contact</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentName</td>
                <td>Grade @s.Grade</td>
                <td>@s.ParentName</td>
                <td>
                    📞 <strong>@s.ParentPhone</strong><br />
                    ✉️ @s.ParentEmail
                </td>
                <td>
                    @using (Html.BeginForm("ConfirmRegister", "Clerk", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("studentId", s.StudentId)

                        <button class="btn btn-success btn-sm">
                            Register
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
